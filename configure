#!/bin/bash
cd ./src
git_url=https://bitbucket.org/remnrem/luna-base
${R_HOME}/bin/Rscript -e "git2r::clone(\"${git_url}\", local_path='luna-base')"

# mkdir include/
export LUNA_ARCH=`${R_HOME}/bin/Rscript -e 'cat(ifelse(Sys.info()["sysname"] == "Darwin", "MAC", "LINUX"))'`
cd luna-base
rm -rf .git
echo "${LUNA_ARCH}"
echo "${FFTW}"
if [[ -z "${FFTW}" ]];
  then
  export FFTW_I_FLAGS=`pkg-config --cflags fftw3`
  export FFTW_LIB_FLAGS=`pkg-config --libs-only-L fftw3`
  export FFTW_LIB_FLAGS=`echo "${FFTW_LIB_FLAGS}" | sed  's/-L//'`
  export FFTW=`dirname $"FFTW_LIB_FLAGS"`
else
  export FFTW_I_FLAGS=-I${FFTW}/include
  export FFTW_LIB_FLAGS=${FFTW}/lib

fi
echo "${FFTW_I_FLAGS}"
echo "${FFTW_LIB_FLAGS}"
echo "${FFTW_FLAGS}"
make ARCH=${LUNA_ARCH} FFTW=${FFTW} ;
# mv * ../include
mkdir -p ../include
mv *.a *.o ../include
mv eval.h luna.h ../include
cd ../
${R_HOME}/bin/Rscript copier.R
# cd ../
rm -rf luna-base
