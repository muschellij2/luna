#!/bin/bash
cd ./src
git_url=https://bitbucket.org/remnrem/luna-base
${R_HOME}/bin/Rscript.exe -e "git2r::clone(\"${git_url}\", local_path='luna-base')"

# mkdir include/
cd luna-base
rm -rf .git
make ARCH=WINDOWS ;
# mv * ../include
mkdir -p ../include
mv *.a *.o ../include
mv eval.h luna.h ../include
cd ../
${R_HOME}/bin/Rscript.exe copier.R
# cd ../
rm -rf luna-base
